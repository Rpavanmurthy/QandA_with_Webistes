{
    "manifest_version": 3,
    "name": "Overlay Extension",
    "version": "1.0",
    "description": "Displays an overlay on every website.",
    "permissions": ["activeTab", "scripting"],
    "host_permissions": ["http://*/*","http://*/*"],
    "content_scripts": [
      {
        "matches": ["http://*/*","http://*/*"],
        "js": ["content_script.js"],
        "css": ["overlay.css"]
      }
    ]
  }
  